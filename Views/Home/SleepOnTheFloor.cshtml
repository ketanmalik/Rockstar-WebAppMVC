@{
    ViewData["Title"] = "Sleep On The Floor";
}
<head>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        $(function () {
            $('#btn-all').on('click', function () {
                console.log("getting..");
                $.get(
                    'http://localhost:5001/Music/SleepOnTheFloor',
                    function (response) {
                        console.log("> ", response);
                        $("#lyrics").html(response);
                    });
            });
        });
    </script>
</head>
<body>
    <h1 style="text-align:center;">@ViewData["Title"] Lyrics</h1>
    <br />
    <div style="text-align:center;">
        <img src="~/images/Lumineers.jpeg" alt="SleepOnTheFloor" width="550" height="450" />
        <br><br>
        <div style="text-align:center;">
            <button id="btn-all">Get Lyrics</button>
        </div>
        <br />
        <div style="text-align:center;">
            <p style="text-align:center;" id="lyrics">
            </p>
            <div class="sw">
                <p style="text-align:center;">
                    <small>Band: <i>The Lumineers</i></small><br>
                    <small>Album: <i>Cleopatra</i></small><br>
                </p>
                <br>
            </div>
        </div>
    </div>
</body>